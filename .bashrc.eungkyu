# interactive shell인 경우에만 진행
[ "$PS1" ] || return

# use screen
if [ -e ~/.bashrc.screen ]; then
	source ~/.bashrc.screen
fi

# load ssh-agent
if [ -e ~/.bashrc.ssh-agent ]; then
	source ~/.bashrc.ssh-agent
fi

# git auto-completion
if [ -e /etc/bash_completion.d/git ]; then
	source /etc/bash_completion.d/git
fi

# check the terminal size when bash regains control
shopt -s checkwinsize

# user mask
umask 022

# user limit
ulimit -c 0

# default programs
export VISUAL=vim
export EDITOR=$VISUAL
export GREP_OPTIONS='--color=auto --exclude=cscope.*'

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

case "$(uname -s)" in
	FreeBSD | Darwin	) alias ls='ls -vG' ;;
	Linux | CYGWIN*		) alias ls='ls -N --color=auto' ;;
esac

alias grep='grep --color=auto'
alias less='less -r'
alias vim='vim -p'
alias g='git'
alias sgrep='grep-source'

if type git >/dev/null; then
	alias diff='git diff --no-index'
fi

function grep-source() {
	if [ $# -eq 0 ]; then
		grep -rI
	elif [ $# -eq 1 ]; then
		grep -rI "$1" *
	else
		grep -rI "$@"
	fi
}

alias vi='vi-helper'
alias cd='cd-helper'

function cd-helper() {
	if [ $# -eq 0 ]; then
		\cd
	elif [ -d "$1" ]; then
		\cd "$@"
	else
		vim -p "$@"
	fi
}

function vi-helper() {
	if [ $# -eq 0 ]; then
		vim
	elif [ -d "$1" ]; then
		\cd "$@"
	else
		vim -p "$@"
	fi
}

if [ -e ~/.bashrc.prompt ]; then
	source ~/.bashrc.prompt
fi
