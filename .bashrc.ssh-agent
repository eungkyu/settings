function use_ssh_agent () {
	# ssh-agent 환경 파일 로드
	if [ -e ~/.ssh-agent.env ]; then
		source ~/.ssh-agent.env >/dev/null
	fi

	# 이미 ssh-agent가 있을 경우 리턴
	if [ -n "$SSH_AUTH_SOCK" -a -e "$SSH_AUTH_SOCK" ]; then
		return
	fi

	ssh-agent > ~/.ssh-agent.env
	source ~/.ssh-agent.env >/dev/null

	ssh-add
}

if [ -n "$USE_SSH_AGENT" ]; then
	use_ssh_agent
fi
