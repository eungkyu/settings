#!/bin/bash

SUBDIRECTORY_OK=1

. "$(git --exec-path)/git-sh-setup"

require_work_tree
cd_to_toplevel

cscope_files_force () {
    if [ $# -gt 0 ]; then
        oldifs="$IFS"
        IFS='|'
        pattern='\.('"$*"')$'
        IFS="$oldifs"
    else
        pattern='\.(c|h|java|php|js|py)$'
    fi

    git ls-files | egrep "$pattern" | sed -re 's/^/"/' -e 's/$/"/' > cscope.files
}

cscope_files () {
    if [ ! -f cscope.files ]; then
        cscope_files_force $@
    fi
}

cscope_build_force () {
    cscope -b
}

cscope_build () {
    if [ ! -f cscope.out ]; then
        cscope_build_force
    fi
}

cscope_clear () {
    rm -f cscope.files cscope.out cscope.in.out cscope.po.out
}

cmd="$1"
shift

if [ "$cmd" = files ]; then
    cscope_files_force $@
elif [ "$cmd" = build ]; then
    cscope_build_force
elif [ "$cmd" = rebuild ]; then
    cscope_files_force $@
    cscope_build_force
elif [ "$cmd" = clear ]; then
    cscope_clear
elif [ "$cmd" = vim-cmd ]; then
    if [ -f cscope.out ]; then
        cscope_files $@
        cscope_build
        echo -n "cscope add $PWD/cscope.out $PWD"
    else
        echo -n "cscope kill 0"
    fi
fi

